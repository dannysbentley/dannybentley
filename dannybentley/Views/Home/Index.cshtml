@{
    ViewBag.Title = "Home Page";
    @Styles.Render("~/Content/StyleSheet.css");
}

<body>
    <!--Slider-->
    <div class="row-fluid">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!--ordered list-->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>
            <!--Slider Images-->
            <div class="carousel-inner" role="listbox">
                <div class="item active">
                    <img src="~/Content/images/1024x700.png" />
                    <div class="carousel-caption">
                        <h1>Get to know</h1>
                        <br />
                        <button type="button" class="btn btn-default">get started</button>
                    </div>
                </div>
                <div class="item">
                    <img src="~/Content/images/119922.png" />
                </div>
                <div class="item">
                    <img src="~/Content/images/662222.png" />
                </div>
            </div>
        </div>
        <!--carousel control-->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div> <!--End Slider-->

    <!--mission statement-->
    <div class="container text-center">
        <p>
            I’m an architecture, engineering, and construction (AEC) technology enthusiast. I truly believe that our industry is on the verge of something remarkable. The current state of our industry is scattered and slow pace.  It’s perfect for us to optimize, digitize and automate large parts of our industry.  I want to be part of this journey to learn, teach and experiment with all things tech in the AEC space. Follow me on Twitter and Youtube.
        </p>
        <!--division of items-->
        <div class="row">
            <div class="col-sm-4">
                <img src="~/Content/images/html5.png" id="icon"/>
                <h4>HTML</h4>
            </div>
            <div class="col-sm-4">
                <img src="~/Content/images/bootstrap.png" id="icon" />
                <h4>Bootstrap</h4>
            </div>
            <div class="col-sm-4">
                <img src="~/Content/images/css3.png" id="icon" />
                <h4>css</h4>
            </div>
        </div>
    </div>
</body>